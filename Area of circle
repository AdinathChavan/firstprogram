package com.company;
import java.util.Scanner;
class areaofcircle{
    public void circlearea(float a){
        float b = a*a*3.14f;
        System.out.printf("Area of the circle is %.2f",b);

    }

}

public class circle {
    public static void main(String[] args) {
        System.out.println("Enter the radius of the circle");
        Scanner sc = new Scanner(System.in);
        float a = sc.nextFloat();
        areaofcircle small = new areaofcircle();
        small.circlearea(a);
    }


}
